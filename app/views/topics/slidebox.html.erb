<ul class="bxslider">

<% @proofs.each do |topic|%>

<li>
<iframe 
src="http://www.youtube.com/embed/<%= topic.video_link %>">
</iframe>
<a class="btn btn-primary show-topics" href="javascript:showContent('.proofs_<%= topic.id %>');">Show topics</a>
<div class="slider-content proofs_<%= topic.id %>">
<%=raw topic.content %>
</div>
</li>
<% end %>
<li>
	<iframe 
src="http://www.youtube.com/embed/<%= @subtopic.video_link %>">
</iframe>
<a class="btn btn-primary show-topics" href="javascript:showContent('.subtopic_<%= @subtopic.id %>');">Show topics</a>
<div class="slider-content subtopic_<%= @subtopic.id %>">
<%=raw @subtopic.description %>
</div>
</li>
<% @examples.each do |topic|%>

<li>
<iframe 
src="http://www.youtube.com/embed/<%= topic.video_link %>">
</iframe>
<a class="btn btn-primary show-topics" href="javascript:showContent('.examples_<%= topic.id %>');">Show topics</a>
<div class="slider-content examples_<%= topic.id %>">
<%=raw topic.content %>
</div>
</li>
<% end %>
</ul>
<div class="full-description">
	
</div>
<script> 
$('.bxslider').bxSlider({
  onSliderLoad: function(){ $('.slider-content').show(); $('.slider-content').hide();},	
 
  pager:false,
  video: true,
  useCSS: false,
  startSlide: <%= @proofs.size %>,
  infiniteLoop:false,
  slideMargin: 30

});
function showContent(getSlidebox){
	$(getSlidebox).toggle();
}
</script>
<style>
	.slider-content{
		margin-top:5px;
		width:100%;		
	}

	.slide-left li{
		border-bottom: 1px solid #000;
		
	}
	.bxslider li{
		margin-left: -25px;
	}
	.slide-left{
		border: 1px solid #000;
		border-bottom: 0;
	}
	.container-center{
		width:90%;		
	}
	.slide-right-block {
	  float: left;
	  margin-left: 7px;
	  width: 70%;
	}
	.show-topics{
		margin-top:5px;
	}
</style>