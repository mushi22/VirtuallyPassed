.hero
  .row.section
    .large-offset-7.large-5.columns.hero-title
      .title.thin
        revolutionizing
        .thick e-learning
      .sub-title.thin professional and organized lecture notes for your class
      =form_for :test do |f|
        .row.findcourse
          .small-10.columns
            =f.text_field :test, :placeholder => "enter your course code"
          .small-2.columns
            =link_to "Go", root_path, :class => "button postfix"

.hero2
  .row.section
    .large-6.columns.hero-title
      .sub-title.thin= link_to "latest courses", courses_path
  

